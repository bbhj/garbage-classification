.wong {
  display: flex;
  flex-wrap: wrap;
  width: 750rpx;
  justify-content: space-evenly;
}
.wong .user_main {
  color: #666;
  position: absolute;
  width: 90%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  padding-bottom: 100rpx;
}
.wong .history_wrap {
  background-color: #fff;
  display: flex;
}
.wong navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.wong .his_num {
  color: #10d169;
}
.wong .xxx {
  height: 100rpx;
}
.wong .card {
  box-sizing: border-box;
  width: 350rpx;
  height: 400rpx;
  background: #25b436;
  border-radius: 15px;
  box-shadow: 1px 5px 60px 0px #100a886b;
  margin-top: 12rpx;
}
.wong .card .card-border-top {
  width: 60%;
  height: 3%;
  background: #00af05;
  margin: auto;
  border-radius: 0px 0px 15px 15px;
}
.wong .card ._span {
  font-weight: 600;
  color: white;
  text-align: center;
  display: block;
  padding-top: 10px;
  font-size: 16px;
}
.wong .card .job {
  font-weight: 400;
  color: white;
  display: block;
  text-align: center;
  padding-top: 3px;
  font-size: 12px;
}
.wong .card .img {
  width: 70px;
  height: 40px;
  background: #10d169;
  border-radius: 15rpx;
  margin: auto;
  margin-top: 25rpx;
}
.wong .card button {
  padding: 8rpx 25rpx;
  display: block;
  border-radius: 8rpx;
  border: none;
  background: #10d169;
  margin-top: 20rpx;
  color: white;
  font-weight: 600;
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
}
.wong .card button:hover {
  background: #36b11a;
}

