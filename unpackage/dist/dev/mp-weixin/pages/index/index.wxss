.index .uni-margin-wrap {
  width: 690rpx;
  width: 100%;
}
.index .uni-margin-wrap .swiper {
  height: 380rpx;
}
.index .uni-margin-wrap .swiper .swiper-item {
  display: block;
  height: 380rpx;
  line-height: 380rpx;
  text-align: center;
}
.index .uni-margin-wrap .swiper .swiper-item image {
  width: 750rpx;
  height: 380rpx;
}
.index .search {
  display: flex;
  padding-top: 15rpx;
}
.index .search image {
  padding-top: 5rpx;
  height: 70rpx;
  width: 70rpx;
}
.index .search uni-section {
  padding-left: 50rpx;
  width: 70%;
}
.index .search button-sp-area {
  padding-top: 15rpx;
}
.index .camera {
  height: 300rpx;
  /* From www.lingdaima.com */
}
.index .camera image {
  height: 300rpx;
}
.index .camera .btn {
  width: 60%;
  background-color: #00BFA6;
  padding: 14px 40px;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: 2px;
  cursor: pointer;
  border-radius: 10px;
  border: 2px dashed #00BFA6;
  box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
  transition: .4s;
  margin-top: 100rpx;
}
.index .camera .btn ._span:last-child {
  display: none;
}
.index .camera .btn:hover {
  transition: .4s;
  border: 2px dashed #00BFA6;
  background-color: #fff;
  color: #00BFA6;
}
.index .camera .btn:active {
  background-color: #87dbd0;
}
.index .main-show-classify .main-classify {
  display: flex;
  direction: center;
  justify-content: center;
}
.index .main-show-classify .main-img {
  width: 300rpx;
  height: 300rpx;
  padding: 20rpx;
}
.index .city {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 4px;
}
.index .input-view {
  display: flex;
  flex-direction: row;
  flex: 1;
  background-color: #f8f8f8;
  height: 30px;
  border-radius: 15px;
  padding: 0 15px;
  flex-wrap: nowrap;
  margin: 7px 0;
  line-height: 30px;
}
.index .input-uni-icon {
  line-height: 30px;
}
.index .nav-bar-input {
  height: 30px;
  line-height: 30px;
  padding: 0 5px;
  font-size: 12px;
  background-color: #f8f8f8;
}

