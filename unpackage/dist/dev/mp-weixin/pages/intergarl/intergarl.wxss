.title {
  position: fixed;
}
.title .mb-10 {
  margin-bottom: 10px;
}
.title .mb-10 .text {
  color: red;
  font-weight: bold;
}
.nullView {
  height: 100rpx;
}
.down {
  height: 100%;
  display: flex;
}
.down .left {
  width: 200rpx;
  height: 100%;
  border-right: 1px solid #eee;
  position: fixed;
}
.down .left view {
  height: 60px;
  line-height: 60px;
  color: #333;
  text-align: center;
  font-size: 30rpx;
  border-top: 1px solid #eee;
}
.down .left .active {
  background: #10d169;
  color: #fff;
}
.down .goodsList {
  position: fixed;
  width: 520rpx;
  margin-left: 27%;
  height: 1150rpx;
}
.down .goodsList uni-card .price {
  color: #ff0b44;
  font-size: 36rpx;
  margin: 20rpx 0 5rpx 0;
  display: flex;
}
.down .goodsList uni-card .price text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.down .goodsList uni-card .price text:nth-child(3) {
  color: #10d169;
  font-size: 40rpx;
  margin-left: 80rpx;
  border: 2px solid #10d169;
  border-radius: 10px;
}
